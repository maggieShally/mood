<!--pages/diaryDetail/diaryDetail.wxml-->
<view class="wrapper diaryDetail-wrapper" bind:touchmove="handletouchmove" bindtouchstart = "handletouchtart" >
  <!-- <view class="operate-sec">
    <image class="icon-operate"src="/public/images/icon-delet.png"></image>
    <image class="icon-operate"src="/public/images/icon-edit.png"></image>
  </view> -->
  <view class="date-sec">
    <text class="date">{{diaryDetails.day}}</text>
    <text class="time">{{diaryDetails.time}}</text>
    <text class="week">{{diaryDetails.week}}</text>
  </view>
  <view class="address-sec">
    <image class="icon-location"src="/public/images/icon-address.png"></image>
    <text>{{diaryDetails.location}}</text>
  </view>
  <view>
    <text style="font-size:{{diaryDetails.fontSize+'rpx'}}; color: {{diaryDetails.color}}; ">{{diaryDetails.content}}</text>
  </view>
  <view class="operate-sec">
    <text class="operate-item">编辑</text>
    <text class="operate-item">删除</text>
  </view>
</view>